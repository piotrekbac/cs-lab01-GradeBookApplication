<Window x:Class="GradeBookApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GradeBookApp" Height="350" Width="525">
	<Grid>
		<Label Content="GradeBook Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<TextBox Name="GradeBookNameTextBox" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
		<Label Content="Type:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
		<ComboBox Name="GradeBookTypeComboBox" HorizontalAlignment="Left" Margin="120,45,0,0" VerticalAlignment="Top" Width="200">
			<ComboBoxItem Content="Standard"/>
			<ComboBoxItem Content="Ranked"/>
			<ComboBoxItem Content="ESNU"/>
			<ComboBoxItem Content="OneToFour"/>
			<ComboBoxItem Content="SixPoint"/>
			<ComboBoxItem Content="Wsei"/>
		</ComboBox>
		<Label Content="Is Weighted:" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>
		<CheckBox Name="IsWeightedCheckBox" HorizontalAlignment="Left" Margin="120,80,0,0" VerticalAlignment="Top"/>
		<Button Content="Create GradeBook" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Width="120" Click="CreateGradeBookButton_Click"/>
		<ListBox Name="GradeBooksListBox" HorizontalAlignment="Left" Height="150" Margin="10,160,0,0" VerticalAlignment="Top" Width="310"/>
	</Grid>
</Window>